<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gloria.myapplication.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@mipmap/icon_personal_message"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/large"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/brown"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:id="@+id/spinner"
            android:spinnerMode="dropdown"
            android:popupBackground="@android:color/white"
            android:background="@mipmap/icon_pull"
            android:layout_marginStart="40dp"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:textSize="@dimen/title"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            />
        
        <!--<SearchView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/search_box"
            android:iconifiedByDefault="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bg_fillet"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            ></SearchView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/bg_fillet">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/search_box"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:cursorVisible="false"
                />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/icon_search"
                android:layout_marginStart="-30dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/pic_event"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:id="@+id/paper"
            android:background="@mipmap/icon_paper"
            android:layout_marginTop="20dp"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/course"
            android:background="@mipmap/icon_course"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/book"
            android:background="@mipmap/icon_book"
            android:layout_marginTop="28dp"
            android:layout_marginStart="35dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/square"
            android:background="@mipmap/icon_square"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="28dp"
            android:layout_marginStart="35dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-17dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/text_paper"
            android:text="资料"
            android:textSize="@dimen/title"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/text_course"
            android:text="课程"
            android:textSize="@dimen/title"
            android:layout_marginStart="40dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/text_book"
            android:text="书籍"
            android:textSize="@dimen/title"
            android:layout_marginStart="35dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/text_square"
            android:text="广场"
            android:textSize="@dimen/title"
            android:layout_marginStart="35dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="为您推荐"
        android:background="@color/red"
        android:gravity="center"
        android:textSize="@dimen/common"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="学习资料"
            android:gravity="center_horizontal"
            android:textSize="@dimen/title"
            android:textColor="@color/brown"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="查看更多 >> "
            android:gravity="right"
            android:textColor="@color/red"/>

        <!--学习资料列表-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="《学吧君需求规格说明书》"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="上传：无题"
                android:layout_weight="1"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2018-7-15"
                android:layout_weight="2"
                android:gravity="right"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="书籍"
            android:gravity="center_horizontal"
            android:textSize="@dimen/title"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/brown"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:text="查看更多 >> "
            android:gravity="right"
            android:textColor="@color/red"/>

        <!--书目列表-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="《围城》"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="作者：钱钟书"
                android:gravity="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="《丰乳肥臀》"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="作者：莫言"
                android:gravity="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="《白夜行》"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="作者：东野圭吾"
                android:gravity="end"/>
        </LinearLayout>

    </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
